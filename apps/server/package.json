{
  "name": "server",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun run --watch src/index.ts | pino-pretty",
    "build": "bun build ./src/index.ts --compile --outfile ../desktop/src-tauri/binaries/api-server",
    "start": "bun run src/index.ts",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "lint:fix": "eslint --cache --cache-location ./node_modules/.cache/eslint --fix .",
    "typecheck": "tsc --noEmit",
    "format": "prettier --check \"**/*.ts\"",
    "format:fix": "prettier --write \"**/*.ts\"",
    "test": "vitest run --logHeapUsage --coverage --silent",
    "test:watch": "vitest",
    "mcp": "npx @modelcontextprotocol/inspector"
  },
  "prettier": "@qwery/prettier-config",
  "dependencies": {
    "@hono/zod-validator": "^0.4.2",
    "@modelcontextprotocol/sdk": "^1.12.0",
    "@qwery/agent-factory-sdk": "workspace:*",
    "@qwery/domain": "workspace:*",
    "@qwery/extensions-loader": "workspace:*",
    "@qwery/extensions-sdk": "workspace:*",
    "@qwery/repository-file": "workspace:*",
    "@qwery/shared": "workspace:*",
    "@qwery/telemetry": "workspace:*",
    "class-transformer": "^0.5.1",
    "hono": "^4.10.7",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@qwery/eslint-config": "workspace:*",
    "@qwery/prettier-config": "workspace:*",
    "@qwery/tsconfig": "workspace:*",
    "@types/bun": "latest",
    "@vitest/coverage-istanbul": "catalog:",
    "eslint": "^9.39.0",
    "pino-pretty": "^13.1.3",
    "typescript": "catalog:",
    "vitest": "catalog:"
  },
  "engines": {
    "node": ">=22.x"
  }
}
