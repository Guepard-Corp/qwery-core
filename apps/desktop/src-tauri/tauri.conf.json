{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Qwery",
  "version": "0.2.3",
  "identifier": "run.qwery.desktop",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../build/client"
  },
  "app": {
    "windows": [
      {
        "title": "Qwery",
        "width": 1024,
        "height": 768
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "binaries/api-server"
    ]
  }
}
