{
  "extends": "@qwery/tsconfig/base.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "paths": {
      "~/*": ["./app/*"],
      "~/config/*": ["./config/*"],
      "~/components/*": ["./components/*"],
      "~/lib/*": ["./lib/*"],
      "~/types/*": ["./.react-router/types/*"]
    },
    "noEmit": true,
    "tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json",
    "rootDirs": [".", "./.react-router/types"]
  },
  "include": [
    "src",
    "app"
  ],
  "exclude": ["node_modules"]
}