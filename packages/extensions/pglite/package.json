{
  "name": "@qwery/extension-pglite",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "main": "./dist/driver.js",
  "types": "./dist/driver.d.ts",
  "exports": {
    ".": {
      "bun": "./src/driver.ts",
      "types": "./dist/driver.d.ts",
      "default": "./dist/driver.js"
    }
  },
  "scripts": {
    "lint": "echo \"no lint configured\"",
    "test": "vitest run --logHeapUsage --coverage --passWithNoTests",
    "build": "tsc -p tsconfig.build.json"
  },
  "contributes": {
    "datasources": [
      {
        "id": "pglite",
        "name": "Embedded PostgreSQL",
        "description": "Test PostgreSQL queries in your browser using PGlite",
        "tags": [
          "SQL"
        ],
        "icon": "media/pglite.svg",
        "drivers": [
          "pglite.default"
        ],
        "docsUrl": "https://github.com/electric-sql/pglite"
      }
    ],
    "drivers": [
      {
        "id": "pglite.default",
        "name": "PGlite (Browser)",
        "description": "Browser runtime PGlite driver",
        "runtime": "browser",
        "entry": "./dist/driver.js"
      }
    ]
  },
  "dependencies": {
    "@electric-sql/pglite": "^0.3.12",
    "@qwery/extensions-sdk": "workspace:*",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@vitest/coverage-istanbul": "catalog:",
    "vitest": "catalog:"
  }
}
