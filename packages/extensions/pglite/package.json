{
  "name": "@qwery/extension-pglite",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "main": "./dist/driver.js",
  "types": "./dist/driver.d.ts",
  "exports": {
    ".": {
      "types": "./dist/driver.d.ts",
      "default": "./dist/driver.js"
    }
  },
  "scripts": {
    "lint": "echo \"no lint configured\"",
    "test": "vitest run --logHeapUsage --coverage --passWithNoTests",
    "build": "tsc -p tsconfig.build.json"
  },
  "contributes": {
    "datasources": [
      {
        "id": "pglite",
        "name": "Embedded PostgreSQL",
        "description": "Test PostgreSQL queries in your browser using PGlite",
        "icon": "media/pglite.svg",
        "formConfig": {
          "preset": "embeddable",
          "docsUrl": "https://github.com/electric-sql/pglite",
          "connectionFieldKind": "connectionString",
          "showDetailsTab": false,
          "showConnectionStringTab": true,
          "placeholders": {
            "host": "—",
            "port": "—",
            "database": ":memory: or indexeddb://dbname",
            "username": "—",
            "password": "—",
            "connectionString": "pglite://:memory: or indexeddb://dbname"
          },
          "fieldLabels": {
            "connectionString": "Database URI"
          }
        },
        "schema": {
          "type": "object",
          "properties": {
            "database": {
              "type": "string",
              "description": "Database name",
              "default": "playground"
            }
          }
        },
        "drivers": [
          "pglite.default"
        ]
      }
    ],
    "drivers": [
      {
        "id": "pglite.default",
        "name": "PGlite (Browser)",
        "description": "Browser runtime PGlite driver",
        "runtime": "browser",
        "entry": "./dist/driver.js"
      }
    ]
  },
  "dependencies": {
    "@electric-sql/pglite": "^0.3.12",
    "@qwery/extensions-sdk": "workspace:*",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@vitest/coverage-istanbul": "catalog:",
    "vitest": "catalog:"
  }
}
