{
  "name": "@qwery/extension-mysql",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "main": "./dist/driver.js",
  "types": "./dist/driver.d.ts",
  "exports": {
    ".": {
      "types": "./dist/driver.d.ts",
      "default": "./dist/driver.js"
    }
  },
  "scripts": {
    "lint": "echo \"no lint configured\"",
    "test": "vitest run --coverage --passWithNoTests",
    "build": "tsc -p tsconfig.build.json"
  },
  "contributes": {
    "datasources": [
      {
        "id": "mysql",
        "name": "MySQL",
        "description": "Connect to MySQL databases",
        "icon": "media/MySQL.svg",
        "formConfig": {
          "preset": "sql",
          "docsUrl": "https://dev.mysql.com/doc/connector-j/8.0/en/connector-j-reference-jdbc-url-format.html",
          "defaultHost": "localhost",
          "defaultPort": "3306",
          "connectionFieldKind": "connectionString",
          "showDetailsTab": true,
          "showConnectionStringTab": true,
          "showSslToggle": true,
          "placeholders": { "port": "3306", "connectionString": "mysql://user:pass@host:3306/db" },
          "fieldLabels": { "connectionString": "Connection string" }
        },
        "schema": {
          "type": "object",
          "oneOf": [
            {
              "type": "object",
              "properties": {
                "host": {
                  "type": "string",
                  "description": "MySQL server hostname"
                },
                "port": {
                  "type": "number",
                  "description": "MySQL server port",
                  "default": 3306
                },
                "username": {
                  "type": "string",
                  "description": "MySQL username"
                },
                "user": {
                  "type": "string",
                  "description": "MySQL username (alias for username)"
                },
                "password": {
                  "type": "string",
                  "description": "MySQL password secret:true",
                  "format": "password"
                },
                "database": {
                  "type": "string",
                  "description": "MySQL database name"
                },
                "ssl": {
                  "type": "boolean",
                  "description": "Enable SSL connection",
                  "default": false
                }
              },
              "required": [
                "host"
              ]
            },
            {
              "type": "object",
              "properties": {
                "connectionUrl": {
                  "type": "string",
                  "description": "MySQL connection string (mysql://user:pass@host:port/database) secret:true",
                  "format": "uri"
                }
              },
              "required": [
                "connectionUrl"
              ]
            }
          ]
        },
        "drivers": [
          "mysql.default"
        ]
      }
    ],
    "drivers": [
      {
        "id": "mysql.default",
        "name": "MySQL (Node)",
        "description": "Default Node runtime MySQL driver",
        "runtime": "node",
        "entry": "./dist/driver.js"
      }
    ]
  },
  "dependencies": {
    "@qwery/extensions-sdk": "workspace:*",
    "mysql2": "^3.15.3",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@vitest/coverage-istanbul": "catalog:",
    "vitest": "catalog:"
  }
}