{
  "name": "@qwery/extension-clickhouse-node",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "main": "./dist/driver.js",
  "types": "./dist/driver.d.ts",
  "exports": {
    ".": {
      "types": "./dist/driver.d.ts",
      "default": "./dist/driver.js"
    }
  },
  "scripts": {
    "lint": "echo \"no lint configured\"",
    "test": "vitest run --coverage --passWithNoTests",
    "build": "tsc -p tsconfig.build.json"
  },
  "contributes": {
    "datasources": [
      {
        "id": "clickhouse-node",
        "name": "ClickHouse (Server)",
        "description": "Connect to ClickHouse databases",
        "tags": [
          "SQL"
        ],
        "icon": "media/ClickHouseLogo_White_FNL.svg",
        "formConfig": {
          "preset": "sql",
          "docsUrl": "https://clickhouse.com/docs/en/interfaces/http",
          "defaultHost": "localhost",
          "defaultPort": "8123",
          "connectionFieldKind": "connectionString",
          "showDetailsTab": true,
          "showConnectionStringTab": true,
          "showSslToggle": true,
          "placeholders": {
            "port": "8123",
            "database": "default",
            "username": "default",
            "connectionString": "clickhouse://user:pass@host:8123/default or http://host:8123"
          },
          "fieldLabels": {
            "connectionString": "Connection string"
          }
        },
        "drivers": [
          "clickhouse.node"
        ]
      }
    ],
    "drivers": [
      {
        "id": "clickhouse.node",
        "name": "ClickHouse (Server)",
        "description": "Node runtime ClickHouse driver",
        "runtime": "node",
        "entry": "./dist/driver.js"
      }
    ]
  },
  "dependencies": {
    "@clickhouse/client": "^0.2.10",
    "@qwery/extensions-sdk": "workspace:*",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@vitest/coverage-istanbul": "catalog:",
    "vitest": "catalog:"
  }
}