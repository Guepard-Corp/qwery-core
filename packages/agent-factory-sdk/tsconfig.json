{
  "extends": "@qwery/tsconfig/base.json",
  "compilerOptions": {
    "skipLibCheck": true,
    "tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json",
    "baseUrl": ".",
    "lib": ["ES2023", "dom", "dom.iterable"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {}
  },
  "include": [
    "*.ts",
    "*.tsx",
    "src",
  ],
  "exclude": [
    "node_modules",
    "__evals__"
  ]
}